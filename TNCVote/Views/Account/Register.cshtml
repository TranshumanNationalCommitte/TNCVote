@model TNCVote.Models.RegisterViewModel

@using Recaptcha.Web.Mvc;


@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_PageOnlyLayout.cshtml";
}

<h2>New Member Registration </h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Register as a TNC Member:</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-element multi-field birthday" id="birthday-form-element">
        <fieldset>
            <legend><strong id="BirthdayLabel">Required Fields</strong></legend>
        </fieldset>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Country, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m=> m.Country, ViewBag.CountryList as SelectList,null,  new { @class = "form-control" })
                @*@Html.TextBoxFor(m => m.Country, new { @class = "form-control" })*@
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Birth Day", new { @class = "col-md-2 control-label" })
            <div class="col-md-2">
                @Html.DropDownListFor(m => m.BirthMonth, ViewBag.MonthNameList as SelectList,"", new { @class = "form-control" })
            
               
            </div>
            <div class="col-md-2">
                @Html.TextBoxFor(m => m.BirthDay, new { @class = "form-control", @size = 2, @maxlength = 2,@placeholder ="DD" })
            </div>
            <div class="col-md-2">
                @Html.TextBoxFor(m => m.BirthYear, new { @class = "form-control", @size = 4, @maxlength = 4, @placeholder = "YYYY" })
            </div>


        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PostalCode, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
            </div>
        </div>
  
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
    
       
    </div>
    <div class="form-element multi-field birthday" id="birthday-form-element">
        <fieldset>
            <legend><strong id="BirthdayLabel">Additional Demographic and Voter Information</strong></legend>
            <h4>Following fields help with voter demographics and help with certain local or regional political issues etc.  They are not required but help in demographic analysis of TNC members.</h4>
        </fieldset>

        <div class="form-group">
            @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
            </div>
        </div>
   
        <div class="form-group">
            @Html.LabelFor(m => m.County, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.County, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Sex, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Sex, ViewBag.GenderList as SelectList,"", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.IncomeRange, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.IncomeRange, ViewBag.IncomeRangeList as SelectList,"", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Education, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Education, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Married, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Married, ViewBag.MarriedList as SelectList,"", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Twitter, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Twitter, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Facebook, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Facebook, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Blog, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Blog, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Website, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Website, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Profession, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Profession, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
            </div>
                <div class="col-md-10">
                    @Html.Recaptcha(theme: Recaptcha.Web.RecaptchaTheme.Clean);
                </div>
            </div>
       
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
    <br /> 
  

  
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
